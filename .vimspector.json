{
  "configurations": {
    "Launch currently open script": {
      "adapter": "debugpy",
      "configuration": {
        "name": "Launch currently open script",
        "type": "python",
        "request": "launch",
        "program": "${file}",
        "cwd": "${fileDirname}"
      }
    },
    "Debug Tests": {
      "adapter": "debugpy",
      "configuration": {
        "name": "Debug tests",
        "type": "python",
        "request": "launch",
	"stopOnEntry": true,
        "program": "python -m pytest ./backend/tests",
        "cwd": "${workspaceRoot}"
      }
    }
  }
}
